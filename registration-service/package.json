{
  "name": "token-factory-registration-service",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "test": "npm run lint && NODE_ENV=development JWT_SECRET=1234 LOG_LEVEL=trace jest --coverage",
    "start:production": "NODE_ENV=production node ./server.js",
    "start:test": "NODE_ENV=test MOCK=true JWT_SECRET=1234 LOG_LEVEL=trace node ./build/server.js",
    "start:development": "NODE_ENV=development JWT_SECRET=1234  LOG_LEVEL=trace node ./build/server.js",
    "start:development-bg": "NODE_ENV=development JWT_SECRET=1234  LOG_LEVEL=trace forever -v start -c node --minUptime 60000 --spinSleepTime 60000 ./build/server.js",
    "stop:development-bg": "forever stop ./build/server.js",
    "start": "npm run start:development",
    "lint": "eslint src/data src/models src/server.js src/test",
    "build-server": "babel --copy-files -d ./build ./src -s",
    "build": "npm run clean && npm run build-server",
    "build:production": "npm run build",
    "clean": "rm -rf build && mkdir -p build/test-output"
  },
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/BlockchainInnovation/token-factory-registration-service.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.0.4",
    "babel": "^6.23.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cross-env": "^5.1.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "express-jwt": "^5.3.1",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.1.1",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "log4js": "^3.0.5",
    "mongoose": "^5.2.17",
    "node-gyp": "*",
    "nodemailer": "^4.6.8",
    "path": "^0.12.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "*",
    "eslint": "^5.6.0",
    "jest": "^23.1.0",
    "jest-tap-reporter": "^1.9.0",
    "supertest": "^3.1.0"
  }
}
